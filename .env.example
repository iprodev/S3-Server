# S3 Storage System - Environment Configuration
# Copy this file to .env and customize as needed

# Node Authentication
NODE_AUTH_TOKEN=changeme-use-a-strong-token

# Grafana Configuration (if using monitoring profile)
GRAFANA_PASSWORD=admin

# Advanced Configuration
# Uncomment and modify as needed:

# TZ=UTC
# LOG_LEVEL=info

# Gateway Configuration
# REPLICAS=3
# WRITE_QUORUM=2
# READ_QUORUM=1

# Performance Configuration
# CACHE_SIZE_MB=512
# QUERY_CACHE_MB=64
# ENABLE_PREFETCH=false

# Storage Policy
# STORAGE_POLICY=replication
# EC_DATA=4
# EC_PARITY=2
